{
    "name": "@riogz/router5",
    "private": true,
    "description": "A simple, powerful, view-agnostic, modular and extensible router",
    "scripts": {
        "build": "rollup -c rollup.config.js",
        "postbuild": "cp -f README.md ./packages/router5/README.md",
        "test": "jest",
        "lint": "eslint packages/*/modules --ext ts,tsx",
        "format": "prettier 'packages/**/*.{js,ts,json}'",
        "changelog": "lerna-changelog",
        "release": "lerna publish"
    },
    "lint-staged": {
        "packages/**/*.{js,ts}": [
            "prettier --write",
            "git add"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/riogod/router5/router5.git"
    },
    "keywords": [
        "router",
        "routing",
        "html5",
        "functional",
        "reactive",
        "universal",
        "isomorphic"
    ],
    "author": "Thomas Roch <thomas.c.roch@gmail.com>, Vyacheslav Krasnyanskiy <riogod@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/riogod/router5/issues"
    },
    "homepage": "https://router5.js.org",
    "devDependencies": {
        "@rollup/plugin-commonjs": "~19.0.2",
        "@rollup/plugin-node-resolve": "~15.2.3",
        "@testing-library/react": "^14.3.0",
        "@testing-library/react-hooks": "^8.0.1",
        "@types/jest": "~24.0.25",
        "@types/react": "~18.2.75",
        "@typescript-eslint/eslint-plugin": "^7.6.0",
        "@typescript-eslint/parser": "^7.6.0",
        "conventional-changelog": "~3.1.18",
        "eslint": "~8.57.0",
        "eslint-plugin-react": "^7.34.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "express": "~4.17.1",
        "husky": "~3.1.0",
        "jest": "~29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "lerna": "^8.1.2",
        "lerna-changelog": "~2.2.0",
        "lint-staged": "~9.5.0",
        "most": "~1.7.3",
        "prettier": "~1.19.1",
        "react": "^18.2.0",
        "react-addons-test-utils": "~15.6.2",
        "react-dom": "^18.2.0",
        "rollup": "~4.14.1",
        "rollup-plugin-typescript2": "~0.36.0",
        "rollup-plugin-uglify": "~6.0.4",
        "ts-jest": "~29.1.2",
        "tslib": "^2.6.2",
        "typescript": "~5.4.4",
        "webpack": "~4.41.4",
        "webpack-dev-middleware": "~3.7.2",
        "webpack-dev-server": "~3.10.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "workspaces": {
        "packages": [
            "packages/*",
            "examples/*",
            "unmaintained/*"
        ]
    }
}
